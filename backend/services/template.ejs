<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Daily Chatbot Report</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 40px;
        background: #f7f7f7;
      }
      h1 {
        text-align: center;
        color: #333;
      }
      .section {
        margin-top: 30px;
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      }
      .item {
        margin-bottom: 10px;
        font-size: 16px;
      }
      .label {
        font-weight: bold;
        color: #555;
      }
      canvas {
        display: block;
        margin: 30px auto;
      }
      ul {
        padding-left: 20px;
        list-style: none;
      }
      li {
        margin-bottom: 8px;
        font-size: 14px;
      }
    </style>
  </head>
  <body>
    <h1>ðŸ¤– Daily Chatbot Report</h1>

    <div class="section">
      <div class="item"><span class="label">Name:</span> <%= name %></div>
      <div class="item">
        <span class="label">Company:</span> <%= companyName %>
      </div>
      <div class="item"><span class="label">Domain:</span> <%= domain %></div>
      <div class="item">
        <span class="label">Used Tokens:</span> <%= usedTokens %>
      </div>
      <div class="item">
        <span class="label">Remaining Tokens:</span> <%= remainingTokens %>
      </div>
      <div class="item">
        <span class="label">Token Limit:</span> <%= tokenLimit %>
      </div>
      <div class="item">
        <span class="label">Total Messages:</span> <%= totalMessages %>
      </div>
      <div class="item">
        <span class="label">Unique Users:</span> <%= uniqueUsers %>
      </div>
    </div>

    <canvas id="tokenPie" width="400" height="400"></canvas>

    <div class="section">
      <h2>ðŸ§¾ Message History (Latest <%= messageHistory.length %>)</h2>
      <% if (messageHistory.length === 0) { %>
      <p>No recent messages.</p>
      <% } else { %>
      <ul>
        <% messageHistory.forEach(msg => { %>
        <li>
          <strong>[<%= msg.role === 'user' ? 'User' : 'Bot' %>]</strong>: <%=
          msg.content %>
        </li>
        <% }) %>
      </ul>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('tokenPie');

        const used = usedTokens;
        const remaining = remainingTokens;
        
          new Chart(ctx, {
            type: 'pie',
            data: {
              labels: ['Tokens Consumed', 'Tokens Remaining'],
              datasets: [{
                data: [used, remaining],
                backgroundColor: ['#F44336', '#4CAF50'],
              }]
            },
            options: {
              plugins: {
                legend: {
                  position: 'bottom'
                }
              }
            }
          });
    </script>
  </body>
</html>
